<div style="text-align: center;">
  <h1 style="color: blue; font-size: 24px;">Login</h1>
  
  <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if flash[:alert].present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= flash[:alert] %></p>
  <% end %>

  <%= form_with(url: user2s_login_path) do |form| %>
    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, name: "user2[username]" %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, name: "user2[password]" %>
    </div>
    <%= form.submit "Login" %>
  <% end %>

  <%= link_to "Forgot Password?", password_resets_new_path %>
</div>
